# ============================================================================
# LinkFlow AI - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control
# ============================================================================

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT_PATH=stdout

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=linkflow
DB_SSL_MODE=disable
DB_SCHEMA=public
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=${DB_SSL_MODE}

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# KAFKA
# =============================================================================
KAFKA_BROKERS=kafka:9092
KAFKA_CONSUMER_GROUP=linkflow-consumers

# =============================================================================
# ELASTICSEARCH
# =============================================================================
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRATION=24h
REFRESH_TOKEN_EXPIRATION=168h
BCRYPT_COST=10

# =============================================================================
# CORS
# =============================================================================
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Request-ID

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=1000

# =============================================================================
# ENCRYPTION (for credentials)
# =============================================================================
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# =============================================================================
# STORAGE (S3/MinIO)
# =============================================================================
S3_ENDPOINT=
S3_BUCKET=linkflow-storage
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@linkflow.ai

# =============================================================================
# STRIPE (Billing)
# =============================================================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =============================================================================
# MONITORING
# =============================================================================
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=admin

# =============================================================================
# SERVICE PORTS
# =============================================================================
KONG_PROXY_PORT=8000
KONG_ADMIN_PORT=8001
AUTH_PORT=8001
USER_PORT=8002
EXECUTION_PORT=8003
WORKFLOW_PORT=8004
NODE_PORT=8005
EXECUTOR_PORT=8007
WEBHOOK_PORT=8008
SCHEDULE_PORT=8009
CREDENTIAL_PORT=8010
NOTIFICATION_PORT=8011
INTEGRATION_PORT=8012
ANALYTICS_PORT=8013
SEARCH_PORT=8014
STORAGE_PORT=8015
CONFIG_PORT=8016
ADMIN_PORT=8017
TENANT_PORT=8019
MONITORING_PORT=8020
BACKUP_PORT=8021
MIGRATION_PORT=8022
