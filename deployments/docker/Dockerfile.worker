# Worker Dockerfile for background jobs
FROM golang:1.21-alpine AS builder
WORKDIR /app
COPY go.* ./
RUN go mod download
COPY . .
ARG WORKER_NAME
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o worker cmd/workers/${WORKER_NAME}/main.go

FROM alpine:3.19
RUN apk --no-cache add ca-certificates tzdata
WORKDIR /root/
COPY --from=builder /app/worker .
COPY --from=builder /app/configs ./configs
CMD ["./worker"]
